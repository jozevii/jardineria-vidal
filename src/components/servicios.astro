---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { Servicio } from "~/types";

const features: Array<Servicio> = [
  {
    title: "Instalación de riegos y Injerto de árboles",
    description:
      "Una buena instalación de un sistemas de riego es fundamental para el mantenimiento del jardín.",
    icon: "mdi:handshake",
  },
  {
    title: "Poda de arboles y Poda Ornamental",
    description:
      "La poda de arboles hace que estos crezcan fuertes y robustos. Con la poda ornamental moldeamos los arboles para que adopten la forma deseada.",
    icon: "mdi:feather",
  },
  {
    title: "Mantenimiento de jardines y a particulares",
    description:
      "Realizamos la tareas de poda, recorte, limpieza, abono, etc.",
    icon: "mdi:directions-fork",
  },
  {
    title: "Poda en altura",
    description:
      "Mantenimiento de jardines particulares asesorando y adaptándonos a los gustos del propietario.",
    icon: "mdi:graph",
  },
  {
    title: "Trabajos con maquinaria",
    description:
      "Asesoramiento, mantenimiento y limpieza de urbanizaciones.",
    icon: "mdi:search-web",
  },
  {
    title: "Artesania con madera",
    description:
      "El procedimiento de injerto puede aplicarse a varios objetivos distintos: Resistencia, Nutrición, Reproducción, Aceleración de ciclo y Enanición.",
    icon: "mdi:account-group",
  },
];
---

<ContentSection title="Servicios que ofrecemos" id="servicios">
  <h4 class="max-w-xl text-center text-2xl">
    
    Nuestros trabajos <span class="text-primary">más solicitados</span>. Consúltanos y 
    nos <span class="text-primary">adaptamos a tus necesidades</span>.
  </h4>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
